" Tab and indent
set autoindent
set shiftround
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

" Search and highlight
set hlsearch
set incsearch
set smartcase

" Performance options
set complete-=i
set lazyredraw

" Text rendering options
set encoding=utf-8
set linebreak
syntax enable
set wrap

" User Interface Options
set wildmenu
set ruler
set noerrorbells
set mouse=a
set title

" Code folding options
set foldmethod=indent
set foldnestmax=3
set nofoldenable

" Other options
set spell


